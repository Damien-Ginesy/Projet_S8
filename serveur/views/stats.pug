    div#nodes 
        h1 Noeud numéro : 
        div.containeur
            table
                tr
                    td 
                        b Age
                    td 12
                    td 14
                    td 2
                    td 12
                tr
                    td 
                        b Vue
                    td N1
                    td N4
                    td N18
                    td N54
            canvas#graph2

        
    

    div#cont
        div#but
